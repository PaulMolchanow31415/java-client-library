<AnchorPane prefHeight="600.0" prefWidth="700.0" styleClass="content" stylesheets="@../css/MainTheme.css"
            xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="edu.client.controller.MainController">
    <children>
        <SplitPane dividerPositions="0.4107142857142857" maxHeight="1.7976931348623157E308"
                   maxWidth="1.7976931348623157E308" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                   AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <items>
                <AnchorPane prefWidth="270.0">
                    <children>
                        <VBox prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="0.0"
                              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                            <children>
                                <TableView fx:id="tableBooks" prefHeight="540.0" prefWidth="253.0">
                                    <columns>
                                        <TableColumn fx:id="titleColumn" maxWidth="1.7976931348623157E308"
                                                     minWidth="-1.0" prefWidth="Infinity" text="Название"/>
                                    </columns>
                                </TableView>
                                <HBox prefHeight="100.0" prefWidth="Infinity">
                                    <children>
                                        <ImageView fitHeight="43.0" fitWidth="43.0" pickOnBounds="true"
                                                   preserveRatio="true">
                                            <image>
                                                <Image url="@../images/search-icon.png"/>
                                            </image>
                                        </ImageView>
                                        <TextField fx:id="filterBookField" promptText="Что вы хотите найти ?"
                                                   styleClass="search-box">
                                            <font>
                                                <Font name="Arial" size="12.0"/>
                                            </font>
                                            <opaqueInsets>
                                                <Insets/>
                                            </opaqueInsets>
                                            <padding>
                                                <Insets bottom="13.0" left="10.0" right="61.0" top="13.0"/>
                                            </padding>
                                        </TextField>
                                    </children>
                                    <padding>
                                        <Insets bottom="16.0" left="16.0" right="16.0" top="16.0"/>
                                    </padding>
                                </HBox>
                            </children>
                        </VBox>
                    </children>
                </AnchorPane>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
                    <children>
                        <VBox prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="0.0"
                              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                            <children>
                                <AnchorPane styleClass="top-label-pane">
                                    <children>
                                        <Label text="Описание книги" AnchorPane.bottomAnchor="0.0"
                                               AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                                               AnchorPane.topAnchor="0.0"/>
                                    </children>
                                </AnchorPane>
                                <GridPane prefHeight="221.0" prefWidth="694.0" styleClass="grid">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="310.0" minWidth="10.0"
                                                           prefWidth="170.0"/>
                                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="472.0" minWidth="10.0"
                                                           prefWidth="178.0"/>
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                    </rowConstraints>
                                    <VBox.margin>
                                        <Insets/>
                                    </VBox.margin>
                                    <children>
                                        <Label layoutX="10.0" layoutY="108.0" styleClass="grid-label" text="Назвнаие">
                                            <font>
                                                <Font name="Arial" size="12.0"/>
                                            </font>
                                        </Label>
                                        <Label layoutX="10.0" layoutY="18.0" styleClass="grid-label" text="Автор"
                                               GridPane.rowIndex="1">
                                            <font>
                                                <Font name="Arial Bold" size="12.0"/>
                                            </font>
                                        </Label>
                                        <Label layoutX="10.0" layoutY="108.0" styleClass="grid-label" text="Год издания"
                                               GridPane.rowIndex="2">
                                            <font>
                                                <Font name="Arial Bold" size="12.0"/>
                                            </font>
                                        </Label>
                                        <Label layoutX="10.0" layoutY="78.0" styleClass="grid-label" text="Издательство"
                                               GridPane.rowIndex="3">
                                            <font>
                                                <Font name="Arial Bold" size="12.0"/>
                                            </font>
                                        </Label>
                                        <Label styleClass="grid-label" text="Раздел библиотеки" GridPane.rowIndex="4">
                                            <font>
                                                <Font name="Arial Bold" size="12.0"/>
                                            </font>
                                        </Label>
                                        <Label fx:id="titleLabel" layoutX="357.0" layoutY="48.0" text="..."
                                               GridPane.columnIndex="1"/>
                                        <Label fx:id="authorLabel" layoutX="357.0" layoutY="78.0" text="..."
                                               GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                                        <Label fx:id="yearPubLabel" layoutX="10.0" layoutY="78.0" text="..."
                                               GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                                        <Label fx:id="sectionLabel" layoutX="10.0" layoutY="48.0" text="..."
                                               GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                                        <Label fx:id="publisherLabel" layoutX="357.0" layoutY="138.0" text="..."
                                               GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                                    </children>
                                </GridPane>
                                <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                                      prefHeight="266.0" prefWidth="414.0" styleClass="vbox">
                                    <children>
                                        <Label styleClass="h1-title" text="Происхождение книги"/>
                                        <Label fx:id="originLabel" layoutX="10.0" layoutY="10.0"
                                               styleClass="book-origin" text="..." wrapText="true"/>
                                    </children>
                                </VBox>
                                <HBox spacing="16.0" styleClass="h-box">
                                    <children>
                                        <Button mnemonicParsing="false" onAction="#handleAdd" styleClass="button-add"
                                                text="Добавить"/>
                                        <Button minHeight="-Infinity" mnemonicParsing="false" onAction="#handleEdit"
                                                styleClass="button-edit" text="Редактировать"/>
                                        <Button mnemonicParsing="false" onAction="#handleDelete"
                                                styleClass="button-delete" text="Удалить"/>
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </children>
                </AnchorPane>
            </items>
        </SplitPane>
    </children>
</AnchorPane>
