<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.SVGPath?>
<?import javafx.scene.text.Font?>
<?import java.lang.*?>
<AnchorPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefWidth="450.0"
            stylesheets="@../css/MainTheme.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="edu.client.controller.EditPublisherController">
    <children>
        <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" AnchorPane.bottomAnchor="0.0"
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <AnchorPane>
                    <children>
                        <Label text="Редактирование издателя" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                               AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"/>
                        <Button alignment="CENTER" contentDisplay="CENTER" graphicTextGap="0.0" mnemonicParsing="false"
                                onAction="#handleClose" styleClass="top-close-button" AnchorPane.bottomAnchor="0.0"
                                AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                            <graphic>
                                <SVGPath content="M1 17L9 9M17 1L9 9M9 9L1 1L17 17" fill="WHITE" stroke="WHITE"
                                         strokeLineJoin="ROUND" styleClass="top-close-icon"/>
                            </graphic>
                        </Button>
                    </children>
                    <styleClass>
                        <String fx:value="top-label-pane"/>
                        <String fx:value="secondary"/>
                    </styleClass>
                </AnchorPane>
                <GridPane styleClass="edit__grid">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="310.0" minWidth="10.0" prefWidth="88.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="472.0" minWidth="10.0" prefWidth="296.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                    <children>
                        <Label layoutX="10.0" layoutY="108.0" styleClass="grid-label" text="Название">
                            <font>
                                <Font name="Arial" size="12.0"/>
                            </font>
                        </Label>
                        <Label layoutX="10.0" layoutY="18.0" styleClass="grid-label" text="Город" GridPane.rowIndex="1">
                            <font>
                                <Font name="Arial Bold" size="12.0"/>
                            </font>
                        </Label>
                        <TextField fx:id="nameField" promptText="От 3 до 255 символов" styleClass="edit__input"
                                   GridPane.columnIndex="1">
                            <font>
                                <Font name="Arial" size="12.0"/>
                            </font>
                        </TextField>
                        <TextField fx:id="cityField" promptText="От 3 до 255 символов" styleClass="edit__input"
                                   GridPane.columnIndex="1" GridPane.rowIndex="1">
                            <font>
                                <Font name="Arial" size="12.0"/>
                            </font>
                        </TextField>
                    </children>
                </GridPane>
                <HBox alignment="TOP_RIGHT" spacing="16.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#handleUpdate" styleClass="button-add"
                                text="Обновить"/>
                        <Button minHeight="-Infinity" mnemonicParsing="false" onAction="#handleClose"
                                styleClass="button-edit" text="Закрыть"/>
                    </children>
                    <styleClass>
                        <String fx:value="h-box"/>
                        <String fx:value="edit__h-box"/>
                    </styleClass>
                </HBox>
            </children>
        </VBox>
    </children>
    <styleClass>
        <String fx:value="edit"/>
        <String fx:value="edit--secondary"/>
    </styleClass>
</AnchorPane>
